                />
                <use href="#0ef284b8-28c2-426e-9442-8655d393522e" x="86" />
              </svg>

              <blockquote class="mt-6 text-lg font-base leading-6 text-white space-y-2">
                {testimonial.content.map((paragraph) => (
                  <p>{paragraph}</p>
                ))}
              </blockquote>
              <figcaption class="mt-6 leading-6 text-pink-700">
                <p>
                  <strong class="font-semibold">{testimonial.name}</strong>
                  <br />
                </p>
                {testimonial.role}
              </figcaption>
            </figure>
          </div>
        </div>
      ))
    }
  </div>
  <div class="swiper-pagination"></div>
</div>

<script>
  import Swiper from "swiper";
  import { Pagination, Autoplay } from "swiper/modules";
  const swiper = new Swiper(".swiper", {
    modules: [Pagination, Autoplay],
    autoHeight: true,
    slidesPerView: 1,
    spaceBetween: 30,
    autoplay: {
      delay: 15000,
    },
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>
