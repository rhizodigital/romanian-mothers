---
import { Image } from "astro:assets";
import mumsImage from "../assets/mums.jpg";
import Logo from "../components/Logo.astro";
---

<div class="relative bg-gradient-to-br from-white to-pink-400/20">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-16 lg:px-8">
    <div
      class="px-6 pb-24 pt-10 sm:pb-32 lg:col-span-7 lg:px-0 lg:pb-56 lg:pt-48 xl:col-span-6"
    >
      <div class="mx-auto max-w-2xl lg:mx-0">
        <Logo />

        <h1
          class="mt-28 text-4xl font-bold tracking-tight text-gray-700 sm:mt-20 sm:text-6xl"
        >
          Rooted in Love, <span class="text-pink-500">Growing in Unity.</span>
        </h1>
        <p class="mt-6 text-xl leading-8 text-gray-600">
          Committed to the well-being and empowerment of Romanian mothers in the
          UK.
        </p>
        <div class="mt-10 flex items-center gap-x-6">
          <a
            href="mailto:contact@romanianmothers.org.uk"
            class="rounded-lg bg-pink-500 px-3.5 py-2.5 font-semibold text-white shadow-sm hover:bg-pink-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-pink-500"
            >Get in touch</a
          >
          <a href="#" class="font-semibold leading-6 text-gray-900"
            >Donate <span aria-hidden="true">â†’</span></a
          >
        </div>
      </div>
    </div>
    <div
      class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0"
    >
      <Image
        class="aspect-[3/2] w-full bg-gray-50 object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full"
        src={mumsImage}
        alt="Mums"
      />
    </div>
  </div>
</div>
